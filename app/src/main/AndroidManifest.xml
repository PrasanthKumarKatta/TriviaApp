<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kpcode4u.triviaapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/trivia_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/trivia_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SummaryActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:label="Summary"
            android:launchMode="singleTop"
            android:parentActivityName=".QuizActivity2"></activity>
        <activity
            android:name=".HistoryActivity"
            android:parentActivityName=".RegisterActivity" />
        <activity
            android:name=".QuizActivity2"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:label="Quiz-2"
            android:launchMode="singleTop"
            android:parentActivityName=".QuizActivity1" />
        <activity
            android:name=".QuizActivity1"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:label="Quiz-1"
            android:launchMode="singleTop"
            android:parentActivityName=".RegisterActivity" />
        <activity
            android:name=".RegisterActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:launchMode="singleTop" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>